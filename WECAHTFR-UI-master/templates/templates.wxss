.message{
    margin-top: 30rpx;
    height: 260rpx;
    border-bottom:  1rpx solid rgba(0, 0, 0, 0.1);
    
}
.Title{
    font-size: 40rpx;    
    height: 60rpx;
    text-overflow: ellipsis;
    font-weight: 600;
}

.SmallMessage{
    margin-top: 20rpx;
    height: 180rpx;
    display:flex;
    justify-content: space-around;
}
.messageimage{
    width: 280rpx;
    height: 150rpx;
}
.Summary{
    width: 300rpx;
    height: 150rpx;
    overflow: hidden;
    font-size: 28rpx;
    color: grey;
}